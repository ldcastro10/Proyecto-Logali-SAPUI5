<mvc:View controllerName="logaligroup.employees.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" class="sapUiResponsiveContentPadding" title="{i18n>title}" titleAlignment="Center">
        <content>
            <Panel id="empleadosPanel" headerText="{i18n>panel1Title}" expandable="true" expanded="true">
                <GenericTile id="crearTile" header="{i18n>titleTile1}" tooltip="{i18n>titleTile1}" press=".onCrearEmpleado" class="sapUiTinyMarginBegin sapUiTinyMarginTop">
                    <TileContent id="crearTileContent">
                        <ImageContent id="crearTileImageContent" src="sap-icon://add-employee" />
                    </TileContent>
                </GenericTile>
                <GenericTile id="verTile" header="{i18n>titleTile2}" tooltip="{i18n>titleTile2}" press=".onVerEmpleado" class="sapUiTinyMarginBegin sapUiTinyMarginTop">
                    <TileContent id="verTileContent">
                        <ImageContent id="verTileImageContent" src="sap-icon://employee-lookup" />
                    </TileContent>
                </GenericTile>
            </Panel>
            <Panel id="pedidosPanel" headerText="{i18n>panel2Title}" expandable="true" expanded="true">
                <GenericTile id="firmarTile" header="{i18n>titleTile3}" tooltip="{i18n>titleTile3}" press=".onFirmarPedido" class="sapUiTinyMarginBegin sapUiTinyMarginTop">
                    <TileContent id="firmarTileContent">
                        <ImageContent id="firmarTileImageContent" src="sap-icon://signature" />
                    </TileContent>
                </GenericTile>
            </Panel>
        </content>
    </Page>
</mvc:View>
